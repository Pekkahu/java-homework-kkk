Print all even numbers till n.

import java.util.*;
public class Main {
    public static void main(String[] args) {
        Scanner f = new Scanner(System.in);
        int n = 2;
        int g = f.nextInt();
        for (int i = 1; i <=g; i++) {
            System.out.print(n*i);
        }
    }
}

